<Window x:Class="MURDOC_2024.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MURDOC_2024"
        xmlns:controls="clr-namespace:MURDOC_2024.UserControls"
        mc:Ignorable="d"
        Height="955" Width="1720"
        ResizeMode="NoResize"
        Title="Mixed-Initiative Camouflage Analysis Tool"
        Background="LightGray"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Your window content here -->
        <!-- Content Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Define three columns with appropriate widths -->
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="1040" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Left Controls: Selection of Image File, Image Adjustment Controls, IAI Output -->
            <StackPanel Orientation="Vertical" MaxWidth="300" Grid.Column="0" Margin="5">

                <!-- Selected Image -->
                <controls:InputImagePane DataContext="{Binding InputImageVM}" Margin="0,5,0,0"/>

                <!-- Image Selection and Control Pane -->
                <controls:ImageControlPane DataContext="{Binding ImageControlVM}" Height="210"/>

                <!-- MICA Control Pane -->
                <controls:MICAControlPane Margin="0,15,0,0" DataContext="{Binding MICAControlVM}" />

            </StackPanel>

            <!-- Main Pane with XAI Pane and Final Prediction -->
            <Grid Grid.Column="1" Margin="5" MaxWidth="1040">
                <!-- Base layer: Final Prediction (never moves) -->
                <controls:FinalPredictionPane
                    DataContext="{Binding FinalPredictionVM}"
                    Height="910"
                    VerticalAlignment="Center"
                    Panel.ZIndex="0"/>

                <!-- Overlay layer: XAI Expander sits ON TOP of prediction -->
                <Expander Header="eXplainable AI Panel"
                    IsExpanded="False"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Panel.ZIndex="10"
                    Opacity="0.95"
                    Background="#CCFFFFFF">

                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="eXplainable AI (XAI) Panel" FontWeight="Bold" FontSize="14"/>
                        </DataTemplate>
                    </Expander.HeaderTemplate>

                    <StackPanel Orientation="Horizontal" Margin="5">
                        <controls:RankNetOutputPane DataContext="{Binding RankNetVM}" />
                        <TextBlock FontFamily="Segoe UI Symbol"
                       FontSize="40"
                       FontWeight="Bold"
                       Text="&#x2B46;"
                       VerticalAlignment="Center"
                       Foreground="Black"
                       Margin="2"/>
                        <controls:EfficientDetD7OutputPane DataContext="{Binding EfficientDetVM}" />
                    </StackPanel>
                </Expander>
            </Grid>

            <!-- Right Controls: Preview, Editor Controls, and Overlay IAI Output -->
            <Grid Grid.Column="2" Margin="5" Width="320">
                <!-- Base layer: Preview + Editor Controls (never move) -->
                <StackPanel Orientation="Vertical" 
                   HorizontalAlignment="Stretch"
                   Panel.ZIndex="0">

                    <!-- Preview Pane - BACK ON TOP -->
                    <controls:PreviewImagePane DataContext="{Binding PreviewPaneVM}" Margin="0,30,0,5"/>

                    <!-- Editor Controls -->
                    <controls:EditorControlsPane DataContext="{Binding EditorControlsVM}" Margin="0,5"/>

                </StackPanel>

                <!-- Overlay layer: IAI Output Expander sits ON TOP -->
                <Expander Header="Informative AI Output"
                    IsExpanded="False"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Panel.ZIndex="10"
                    Opacity="0.95"
                    Background="#CCFFFFFF">

                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="Informative AI Output" 
                          FontWeight="Bold" 
                          FontSize="14"/>
                        </DataTemplate>
                    </Expander.HeaderTemplate>

                    <Border BorderBrush="#CCCCCC" 
                        BorderThickness="1" 
                        Background="White"
                        CornerRadius="4"
                        Margin="5"
                        MaxHeight="400">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <controls:IAIOutputPane DataContext="{Binding IAIOutputVM}" 
                                       Margin="10"/>
                        </ScrollViewer>
                    </Border>
                </Expander>
            </Grid>

        </Grid>

    </DockPanel>
</Window>
