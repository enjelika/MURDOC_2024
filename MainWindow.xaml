<Window x:Class="MURDOC_2024.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MURDOC_2024"
        xmlns:controls="clr-namespace:MURDOC_2024.UserControls"
        mc:Ignorable="d"
        Height="965" Width="1740"
        ResizeMode="NoResize"
        Title="Mixed-Initiative Camouflage Analysis Tool"
        Background="LightGray"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Your window content here -->
        <!-- Content Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Define three columns with appropriate widths -->
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="1070" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Left Controls: Selection of Image File, Image Adjustment Controls, IAI Output -->
            <StackPanel Orientation="Vertical" MaxWidth="300" Grid.Column="0" Margin="5">

                <!-- Selected Image -->
                <controls:InputImagePane DataContext="{Binding InputImageVM}"/>

                <!-- Image Selection and Control Pane -->
                <controls:ImageControlPane DataContext="{Binding ImageControlVM}" Height="210"/>

                <!-- MICA Control Pane -->
                <controls:MICAControlPane Margin="0,15,0,0" DataContext="{Binding MICAControlVM}" />

            </StackPanel>

            <!-- Main Pane with XAI Pane and Final Prediction -->
            <Grid Grid.Column="1" Margin="5" MaxWidth="1060">
                <!-- Base layer: Final Prediction (never moves) -->
                <controls:FinalPredictionPane
                    DataContext="{Binding FinalPredictionVM}"
                    Height="940"
                    VerticalAlignment="Center"
                    Panel.ZIndex="0"/>

                <!-- Overlay layer: XAI Expander sits ON TOP of prediction -->
                <Expander Header="eXplainable AI Panel"
                    IsExpanded="False"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Panel.ZIndex="10"
                    Opacity="0.95"
                    Background="#CCFFFFFF">

                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="eXplainable AI (XAI) Panel" FontWeight="Bold" FontSize="14"/>
                        </DataTemplate>
                    </Expander.HeaderTemplate>

                    <StackPanel Orientation="Horizontal" Margin="5">
                        <controls:RankNetOutputPane DataContext="{Binding RankNetVM}" />
                        <TextBlock FontFamily="Segoe UI Symbol"
                       FontSize="40"
                       FontWeight="Bold"
                       Text="&#x2B46;"
                       VerticalAlignment="Center"
                       Foreground="Black"
                       Margin="2"/>
                        <controls:EfficientDetD7OutputPane DataContext="{Binding EfficientDetVM}" />
                    </StackPanel>
                </Expander>
            </Grid>

            <!-- Right Controls: Preview Mouse-Over Image & Editor Controls -->
            <Grid Grid.Column="2" Margin="5" Width="300">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Base layer: Preview and Editor Controls (never move) -->
                <StackPanel Grid.Row="0" Grid.RowSpan="2" 
                Orientation="Vertical" 
                HorizontalAlignment="Center"
                Panel.ZIndex="0" Width="300">
                    <!-- Preview for mouse over -->
                    <controls:PreviewImagePane DataContext="{Binding PreviewPaneVM}" Margin="0,30,0,5" Height="240"/>

                    <!-- Editor Controls -->
                    <controls:EditorControlsPane Margin="0,10,0,0" Width="287"/>
                </StackPanel>

                <!-- Overlay layer: IAI Output Expander sits ON TOP -->
                <Expander Header="Informative AI Panel"
                  IsExpanded="False"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Panel.ZIndex="10"
                  Opacity="0.95"
                  Background="#CCFFFFFF"
                  MaxWidth="500" Width="300" Margin="0,5,0,0">

                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="Informative AI (IAI) Panel" 
                              FontWeight="Bold" 
                              FontSize="14"/>
                        </DataTemplate>
                    </Expander.HeaderTemplate>

                    <Border BorderBrush="#CCCCCC" 
                    BorderThickness="1" 
                    Background="White"
                    CornerRadius="4"
                    Margin="0,5,0,0">
                        <controls:IAIOutputPane DataContext="{Binding IAIOutputVM}" 
                                   Margin="10"/>
                    </Border>
                </Expander>
            </Grid>

        </Grid>

    </DockPanel>
</Window>
