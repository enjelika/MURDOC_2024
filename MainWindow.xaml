<Window x:Class="MURDOC_2024.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MURDOC_2024"
        xmlns:controls="clr-namespace:MURDOC_2024.UserControls"
        mc:Ignorable="d"
        Height="995" Width="1740"
        ResizeMode="NoResize"
        Background="LightGray"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Your window content here -->
        <!-- Content Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Define three columns with appropriate widths -->
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="1085" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Left Controls: Selection of Image File, Image Adjustment Controls, IAI Output -->
            <StackPanel Orientation="Vertical" MaxWidth="300" Grid.Column="0" Margin="5">
                <!-- Image Selection and Control Pane -->
                <controls:ImageControlPane DataContext="{Binding ImageControlVM}"/>

                <!-- Selected Image -->
                <controls:InputImagePane DataContext="{Binding InputImageVM}"/>

                <!-- IAI Output Message -->
                <controls:IAIOutputPane DataContext="{Binding IAIOutputVM}" />

            </StackPanel>

            <StackPanel Orientation="Vertical" MaxWidth="1085" Grid.Column="1" Margin="5">
                <Expander Header="XAI Panel" IsExpanded="True" Margin="5">
                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="XAI Panel" FontWeight="Bold" FontSize="14"/>
                        </DataTemplate>
                    </Expander.HeaderTemplate>

                    <StackPanel Orientation="Horizontal">
                        <!-- RankNet Output Pane -->
                        <controls:RankNetOutputPane DataContext="{Binding RankNetVM}" />
                        <TextBlock FontFamily="Segoe UI Symbol" FontSize="40" FontWeight="Bold" 
                            Text="&#x2B46;" VerticalAlignment="Center" Foreground="Black" Margin="2"/>
                        
                        <!-- EfficientDetD7 Output Pane -->
                        <controls:EfficientDetD7OutputPane DataContext="{Binding EfficientDetVM}" />
                    </StackPanel>
                </Expander>

                <!-- Final Prediction Output Pane -->
                <controls:FinalPredictionPane DataContext="{Binding FinalPredictionVM}" Height="400"/>

            </StackPanel>
            
            <!-- Main pane -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Grid.Column="2" Margin="5">
                <!-- Preview for mouse over -->
                <controls:PreviewImagePane DataContext="{Binding PreviewPaneVM}"/>

                <!-- MICA Control Pane -->
                <controls:MICAControlPane />

            </StackPanel>

        </Grid>

    </DockPanel>
</Window>
