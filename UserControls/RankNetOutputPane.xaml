<UserControl x:Class="MURDOC_2024.UserControls.RankNetOutputPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MURDOC_2024.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="530" d:DesignWidth="725">
    <Grid>
        <!-- RankNet -->
        <StackPanel Orientation="Vertical" Background="LightGray">

            <Label Content="AI Model: RankNet" FontWeight="Bold" Margin="10,0,0,0"/>

            <StackPanel Orientation="Horizontal" MaxHeight="510">
                <Border BorderBrush="DarkGray" BorderThickness="1"  Height="500">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Localization" FontWeight="DemiBold" HorizontalAlignment="Left" Margin="10,5,5,0"/>

                        <StackPanel Orientation="Horizontal" Margin="15,0,0,0">

                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">

                                <StackPanel Orientation="Vertical">
                                    <Image Source="{Binding X1}" Margin="0" Stretch="Uniform" MaxWidth="60" Height="Auto" HorizontalAlignment="Left" MouseEnter="RankNetImage_MouseEnter" />
                                    <Label Content="Stage 1" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <TextBlock FontFamily="Segoe UI Symbol" FontSize="30" FontWeight="Bold" Text="&#x2193;" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Black" Margin="0"/>

                                <StackPanel Orientation="Vertical">
                                    <Image Source="{Binding X2}" Margin="0" Stretch="Uniform" MaxWidth="60" Height="Auto" HorizontalAlignment="Left" MouseEnter="RankNetImage_MouseEnter"/>
                                    <Label Content="Stage 2" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <TextBlock FontFamily="Segoe UI Symbol" FontSize="30" FontWeight="Bold" Text="&#x2193;" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Black" Margin="0"/>

                                <StackPanel Orientation="Vertical">
                                    <Image Source="{Binding X3}" Margin="0" Stretch="Uniform" MaxWidth="60" Height="Auto" HorizontalAlignment="Left" MouseEnter="RankNetImage_MouseEnter" />
                                    <Label Content="Stage 3" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <TextBlock FontFamily="Segoe UI Symbol" FontSize="30" FontWeight="Bold" Text="&#x2193;" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Black" Margin="0"/>

                                <StackPanel Orientation="Vertical">
                                    <Image Source="{Binding X4}" Margin="0" Stretch="Uniform" MaxWidth="60" Height="Auto" HorizontalAlignment="Left"  MouseEnter="RankNetImage_MouseEnter" />
                                    <Label Content="Stage 4" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                <TextBlock FontFamily="Segoe UI Symbol" FontSize="40" FontWeight="Bold" Text="&#x2198;" VerticalAlignment="Center" Foreground="Black" Margin="0,0,0,0"/>
                                <TextBlock FontFamily="Segoe UI Symbol" FontSize="40" FontWeight="Bold" Text="&#x2198;" VerticalAlignment="Center" Foreground="Black" Margin="0,50,0,0"/>
                                <TextBlock FontFamily="Segoe UI Symbol" FontSize="40" FontWeight="Bold" Text="&#x2197;" VerticalAlignment="Center" Foreground="Black" Margin="0,50,0,0"/>
                                <TextBlock FontFamily="Segoe UI Symbol" FontSize="40" FontWeight="Bold" Text="&#x2197;" VerticalAlignment="Center" Foreground="Black" Margin="0,50,0,0"/>
                            </StackPanel>

                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                <Image Source="{Binding FixationDecoder}" Margin="0,0,5,5" Stretch="Uniform" MaxWidth="80" Height="Auto" HorizontalAlignment="Center" MouseEnter="RankNetImage_MouseEnter" />
                                <Label Content="Fixation Decoder"/>
                            </StackPanel>

                            <TextBlock FontFamily="Segoe UI Symbol" FontSize="40" FontWeight="Bold" Text="&#x2B46;" VerticalAlignment="Center" Foreground="Black" Margin="0"/>

                            <StackPanel Orientation="Vertical" Margin="5,15,0,0" VerticalAlignment="Center">
                                <Image Source="{Binding FixationGradCAM}" Margin="0,0,5,5" Stretch="Uniform" MaxWidth="80" Height="Auto" HorizontalAlignment="Center" MouseEnter="RankNetImage_MouseEnter" />
                                <Label Content="Grad-CAM Output"  HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </DockPanel>

                </Border>

                <Border BorderBrush="DarkGray" BorderThickness="1"  Height="500">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Ranking" FontWeight="DemiBold" HorizontalAlignment="Left" Margin="10,5,5,0"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">

                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Vertical">
                                    <Image Source="{Binding X2_2}" Margin="0" Stretch="Uniform" MaxWidth="60" Height="Auto" HorizontalAlignment="Left" MouseEnter="RankNetImage_MouseEnter" />
                                    <Label Content="Stage 2__2" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <TextBlock FontFamily="Segoe UI Symbol" FontSize="30" FontWeight="Bold" Text="&#x2193;" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Black" Margin="0"/>

                                <StackPanel Orientation="Vertical">
                                    <Image Source="{Binding X3_2}" Margin="0" Stretch="Uniform" MaxWidth="60" Height="Auto" HorizontalAlignment="Left" MouseEnter="RankNetImage_MouseEnter" />
                                    <Label Content="Stage 3__2" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <TextBlock FontFamily="Segoe UI Symbol" FontSize="30" FontWeight="Bold" Text="&#x2193;" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Black" Margin="0"/>

                                <StackPanel Orientation="Vertical">
                                    <Image Source="{Binding X4_2}" Margin="0" Stretch="Uniform" MaxWidth="60" Height="Auto" HorizontalAlignment="Left" MouseEnter="RankNetImage_MouseEnter" />
                                    <Label Content="Stage 4__2" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <TextBlock FontFamily="Segoe UI Symbol" FontSize="30" FontWeight="Bold" Text="&#x2193;" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Black" Margin="0"/>

                                <StackPanel Orientation="Vertical">
                                    <Image Source="{Binding RefPred}" Margin="0" Stretch="Uniform" MaxWidth="60" Height="Auto" HorizontalAlignment="Left" MouseEnter="RankNetImage_MouseEnter" />
                                    <Label Content="Ref__Pred" HorizontalAlignment="Center"/>
                                </StackPanel>

                            </StackPanel>

                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                <TextBlock FontFamily="Segoe UI Symbol" FontSize="40" FontWeight="Bold" Text="&#x2198;" VerticalAlignment="Center" Foreground="Black" Margin="0,0,0,0"/>
                                <TextBlock FontFamily="Segoe UI Symbol" FontSize="40" FontWeight="Bold" Text="&#x2198;" VerticalAlignment="Center" Foreground="Black" Margin="0,50,0,0"/>
                                <TextBlock FontFamily="Segoe UI Symbol" FontSize="40" FontWeight="Bold" Text="&#x2197;" VerticalAlignment="Center" Foreground="Black" Margin="0,50,0,0"/>
                                <TextBlock FontFamily="Segoe UI Symbol" FontSize="40" FontWeight="Bold" Text="&#x2197;" VerticalAlignment="Center" Foreground="Black" Margin="0,50,0,0"/>
                            </StackPanel>

                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                <Image Source="{Binding CamouflageDecoder}" Margin="0,0,5,5" Stretch="Uniform" MaxWidth="80" MaxHeight="200" HorizontalAlignment="Center" MouseEnter="RankNetImage_MouseEnter" />
                                <Label Content="Camouflage Decoder"/>
                            </StackPanel>

                            <TextBlock FontFamily="Segoe UI Symbol" FontSize="40" FontWeight="Bold" Text="&#x2B46;" VerticalAlignment="Center" Foreground="Black" Margin="0"/>

                            <StackPanel Orientation="Vertical" Margin="5,15,0,0" VerticalAlignment="Center">
                                <Image Source="{Binding CamouflageGradCAM}" Margin="0,0,5,5" Stretch="Uniform" MaxWidth="80" MaxHeight="200" HorizontalAlignment="Center" MouseEnter="RankNetImage_MouseEnter" />
                                <Label Content="Grad-CAM Output"  HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
