<UserControl x:Class="MURDOC_2024.UserControls.InputImagePane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MURDOC_2024.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical" Background="Lightgray" Margin="5" Width="280" Height="300">
            <Label Content="Input" FontWeight="Bold" Margin="10,0,0,0"/>
            <Image Source="{Binding InputImage}" Margin="5" Stretch="Uniform" Width="Auto" MaxHeight="290" />
        </StackPanel>
    </Grid>
</UserControl>
