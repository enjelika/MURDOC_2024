<UserControl x:Class="MURDOC_2024.UserControls.MICAControlPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MURDOC_2024.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="270" d:DesignWidth="280">
    <Grid>
        <StackPanel Orientation="Vertical" Background="Lightgray" Width="270" Margin="5,0,5,0">
            <Label Content="Detection Controls" FontWeight="Bold" Margin="5,0,5,10"/>

            <!-- Sensitivity Control -->
            <Border Background="#F8F8F8" CornerRadius="3" Padding="8" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="Sensitivity (d')" FontWeight="SemiBold" FontSize="12"/>
                    <Slider x:Name="SensitivitySlider" Minimum="0.5" Maximum="3.0" Value="{Binding Sensitivity}" Margin="0,5" />
                    <TextBlock Text="{Binding ElementName=SensitivitySlider, Path=Value, StringFormat='Value: {0:F2}'}" 
                           HorizontalAlignment="Center" FontSize="10" Foreground="#666"/>
                </StackPanel>
            </Border>

            <!-- Bias Control -->
            <Border Background="#F8F8F8" CornerRadius="3" Padding="8" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="Response Bias (β)" FontWeight="SemiBold" FontSize="12"/>
                    <Slider x:Name="BiasSlider" Minimum="-2.0" Maximum="2.0" Value="{Binding Bias}" Margin="0,5"/>
                    <TextBlock Text="{Binding ElementName=BiasSlider, Path=Value, StringFormat='Value: {0:F2}'}" 
                           HorizontalAlignment="Center" FontSize="10" Foreground="#666"/>
                </StackPanel>
            </Border>

            <!-- Model controls: Run models to gather prediction and outputs -->
            <Button Content="Run Models" Command="{Binding RunCommand}" IsEnabled="{Binding IsRunButtonEnabled}" Margin="75,5,75,5" />

            <!-- Reset control: clears the GUI -->
            <Button Content="Reset" Command="{Binding ResetCommand}" IsEnabled="{Binding IsRunButtonEnabled}" Margin="75,5,75,5" />

        </StackPanel>
    </Grid>
</UserControl>
