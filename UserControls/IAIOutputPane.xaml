<UserControl x:Class="MURDOC_2024.UserControls.IAIOutputPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MURDOC_2024.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="255" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5" Background="Lightgray">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="240">
                <TextBox Text="{Binding IAIOutputMessage}" FontSize="14" IsReadOnly="True" TextWrapping="Wrap" Height="275" Width="280"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
