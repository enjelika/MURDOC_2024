<UserControl x:Class="MURDOC_2024.UserControls.EfficientDetD7OutputPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MURDOC_2024.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="530" d:DesignWidth="240">
    <Grid>
        <StackPanel Orientation="Vertical" Background="Lightgray">
            <Label Content="AI Model: EfficientDet-D7" FontWeight="Bold" Width="220" Margin="10,0,0,0"/>

            <Border BorderBrush="DarkGray" BorderThickness="1" Height="500">
                <DockPanel>

                    <StackPanel Orientation="Vertical">
                        <Image Source="{Binding DetectionImage}" Margin="5" Stretch="Uniform" MaxWidth="200" Height="Auto" MaxHeight="400" HorizontalAlignment="Center" MouseEnter="EfficientDetImage_MouseEnter" />

                        <Label Content="Text Output:" FontWeight="DemiBold"/>

                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="320">
                            <TextBox Text="{Binding DetectionText}" Margin="5,2" IsReadOnly="True" TextWrapping="Wrap" Width="220" Height="Auto"/>
                        </ScrollViewer>
                    </StackPanel>

                </DockPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
