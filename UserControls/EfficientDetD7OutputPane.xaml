<UserControl x:Class="MURDOC_2024.UserControls.EfficientDetD7OutputPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MURDOC_2024.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="590" d:DesignWidth="330">
    <Grid>
        <StackPanel Orientation="Vertical" Background="Lightgray">
            <Label Content="EfficientDet-D7" FontWeight="Bold" Width="250" Margin="10,0,0,0"/>

            <Border BorderBrush="DarkGray" BorderThickness="1" Height="560">
                <DockPanel>

                    <StackPanel Orientation="Vertical">
                        <Image Source="{Binding DetectionImage}" Margin="10" Stretch="Uniform" MaxWidth="200" Height="Auto" HorizontalAlignment="Center" MouseEnter="EfficientDetImage_MouseEnter" />

                        <TextBlock Text="{Binding DetectionText}" Margin="5,2" TextWrapping="Wrap" Width="200" Height="Auto"/>
                    </StackPanel>


                </DockPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
