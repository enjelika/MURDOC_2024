<UserControl x:Class="MURDOC_2024.UserControls.PreviewImagePane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MURDOC_2024.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="230" d:DesignWidth="320">
    <Grid>
        <StackPanel Orientation="Vertical" Background="Lightgray" Width="315" Margin="2,0,2,0">
            <Label Content="Mouse Over Preview" FontWeight="Bold" FontSize="14"/>

            <Image Source="{Binding PreviewImage}" Margin="5" Stretch="Uniform" Width="Auto" MaxHeight="200" />
        </StackPanel>
    </Grid>
</UserControl>
