<UserControl x:Class="MURDOC_2024.UserControls.PreviewImagePane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MURDOC_2024.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="460">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5" Background="Lightgray" Width="450" Height="320">
            <Label Content="Preview" FontWeight="Bold" Margin="5,0,20,0"/>
            <Image Source="{Binding PreviewImage}" Margin="5" Stretch="Uniform" Width="Auto" MaxHeight="300" />
        </StackPanel>
    </Grid>
</UserControl>
